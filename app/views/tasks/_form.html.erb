<%= simple_form_for(@task) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :team_id, collection: Team.all,
    as: :radio_buttons %>
    <%= f.input :name %>
  </div>

  <div class="form-inputs">
    <%= f.input :finished, collection: [true,false],
    as: :radio_buttons %>
    <%= f.input :name %>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
