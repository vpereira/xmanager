<%= simple_form_for(@team) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>

  <div class="form-inputs">
    <%= f.input :user_ids, :collection=>User.without_team + @team.users,
    as: :check_boxes, include_hidden: false%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>

<% end %>
