<p id="notice"><%= notice %></p>

<h1>Listing Teams</h1>

<% @teams.each do |team| %>
<div class="panel panel-primary">
   <div class="panel-heading">
      <h3 class="panel-title"><%= team.name %> (<%= link_to 'Edit', edit_team_path(team)%>)</h3>
   </div>
   <div class="panel-body">
     <div class="team-members">
     <h4> Members: </h4>
     <% unless team.users.empty? %>
     <ul>
     <% team.users.each do |user| %>
      <li>
        <%= link_to user.name, team %>
      </li>
     <%end%>
     </ul>
     <%end%>
   </div>
   <div class="team-tasks">
     <h4> Tasks: </h4>
     <% unless team.tasks.empty? %>
     <ul>
     <% team.tasks.each do |task| %>
       <li>
         <%= print_status(task) %>
         <%= link_to task.name, task %>
       </li>
     <% end %>
     </ul>
     <% end %>
   </div>
   </div>
</div>
<%end%>
<br>

<%= link_to 'New Team', new_team_path %>
